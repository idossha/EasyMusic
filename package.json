{
  "name": "easymusic",
  "version": "0.1.0",
  "description": "Easy music downloader with Spotifydl and Electron UI",
  "main": "main.js",
  "author": "EasyMusic Team",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-spotdl": "python3 scripts/build-spotdl-pyinstaller.py",
    "build-ytdlp": "python3 scripts/build-ytdlp-pyinstaller.py",
    "download-ffmpeg": "bash scripts/download-ffmpeg.sh",
    "build": "npm run build-spotdl && npm run build-ytdlp && npm run download-ffmpeg && electron-builder",
    "build:verbose": "npm run build-spotdl && npm run build-ytdlp && npm run download-ffmpeg && DEBUG=electron-builder electron-builder",
    "build-electron": "electron-builder",
    "clean": "rm -rf dist build downloads spotdl_env node_modules binaries",
    "clean-downloads": "rm -rf downloads/*",
    "clean-spotdl": "rm -rf spotdl_env binaries/spotdl",
    "clean-ytdlp": "rm -rf binaries/ytdlp"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.easymusic.app",
    "productName": "EasyMusic",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**/*",
      "!downloads/**/*",
      "!node_modules/**/*",
      "!*.md",
      "!.gitignore",
      "!.git/**/*",
      "!.DS_Store",
      "!spotdl_env/**/*",
      "!build/**/*",
      "build/entitlements.mac.plist",
      "binaries/**/*"
    ],
    "extraResources": [
      {
        "from": "binaries",
        "to": "binaries",
        "filter": ["**/*"]
      }
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "type": "distribution",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "category": "Audio",
      "icon": "assets/icon.png"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
